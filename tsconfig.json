{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "checkJs": true,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "out": "./doc"
  }
}
